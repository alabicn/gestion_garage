{% extends 'base.html.twig' %}
{% block title %}{{title}}{% endblock %}
{% block body %}
<div class="container-sm">
    <div class="d-flex bd-highlight">
        <div class="p-2 w-100 bd-highlight">
        <h1>{{title}}</h1>
        </div>
        <div class="p-2 flex-shrink-1 bd-highlight"><a href="{{ path('garages') }}" class="btn btn-outline-primary" role="button"><i class="fas fa-arrow-left"></i></a></div>
    </div>
    {{ form_start(editGarageForm) }}
        {{ form_row(editGarageForm.nom) }}
        {{ form_row(editGarageForm.numeroTelephone) }}
        {{ form_row(editGarageForm.adresse) }}
        <div hidden>
        {{ form_row(editGarageForm.ville, {'disabled': 'true'}) }}
        </div>
    {{ form_end(editGarageForm) }}
</div>

{% endblock %}